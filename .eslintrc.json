{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
        "React": true
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],

    "rules": {
        "react/jsx-closing-bracket-location": 1,
        "react/jsx-indent-props": 1,
        "react/jsx-indent": 1,

        "no-console": [
            "error", {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "strict": [
            "off",
            "safe"
        ],
        "indent": [
            "error",
            4, {
                "SwitchCase": 1,
                "VariableDeclarator": {
                    "var": 1,
                    "let": 1,
                    "const": 2
                },
                "outerIIFEBody": 1,
                "MemberExpression": 1,
                "FunctionDeclaration": {
                    "parameters": "first",
                    "body": 1
                },
                "FunctionExpression": {
                    "parameters": "first",
                    "body": 1
                },
                "CallExpression": {
                    "arguments": "first"
                }
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "no-empty": [
            "error"
        ]
    }
}
